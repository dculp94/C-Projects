 * Program 1: This program asks input from a user to indicate
 * their age for the current year. 

 * Input: 'birthyear' is the input as a double to take in the user's birthyear

 * Output: Prints out a statement asking for the birthyear and 
 *         tells the user what their age is for the current year.
 *
 * Return: None
 * 
 *
**/

#include "Main.h"

using namespace std;

static const string TAG = "Main: ";


int main(int argc, char *argv[])
{

// Determines what year they were born
double birthyear = 0.0;
// Current year
double year = 2014.0;
// Data type to store the age of a person
double age = 0.0;

// Statement to read to the user what to enter
  cout << "Please enter the year you were born: " << endl;
  cin >> birthyear;
  
  age = year - birthyear;
  
// Checks to see if the year they were born is greater than 0  
  if (birthyear < year)
   {
    cout << "Happy Birthday! \n" << "You will be " << age <<
    " years old in 2014. " << endl;
   }
// Returns an error if current year is less than or equal to birth year 
  else 
   {
    cout << "Impossible! You have not been born yet" << endl;
   }


  return 0;
}
